@page "/champions"
@using Microsoft.AspNetCore.Components
@using LeagueBuildTool.Core

<PageTitle>Champions</PageTitle>

<div class="champions-layout">
    <!-- Left Navigation Bar -->
    <div class="left-nav-bar">
        <div class="nav-header">Champions</div>
        <input type="text" class="search-bar" placeholder="Search champions..." />
        <div class="filters-section">
            <p style="margin-bottom: 1rem;">Filters</p>
            <!-- Filters will go here -->
        </div>
    </div>

    <!-- Champions Grid -->
    <div class="champions-content">
        @if (champions == null)
        {
            <p>Loading champions...</p>
        }
        else if (champions.Count == 0)
        {
            <p>No champions found.</p>
        }
        else
        {
            @foreach (var champion in champions)
            {
                <div class="champion-card" @key="champion.Name">
                    <div class="champion-image-box">@champion.Name.Substring(0, 1)</div>
                    <div class="champion-name">@champion.Name</div>
                </div>
            }
        }
    </div>
</div>

