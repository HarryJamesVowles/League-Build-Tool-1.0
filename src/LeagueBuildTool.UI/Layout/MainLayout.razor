@inherits LayoutComponentBase

<style>
    html, body {
        margin: 0;
        padding: 0;
        background: #fff;
        color: #000;
    }

    .app-window {
        width: 100%;
        height: 100vh;
        margin: 0;
        padding: 0;
        background: #fff;
        display: flex;
        flex-direction: column;
    }

    .page {
        height: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
    }

    .top-bar {
        width: 100%;
        height: 16.667vh;
        background: #1a3a5c;
        margin: 0;
        padding: 0;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 2rem;
        gap: 2.3rem;
        position: relative;
    }

    .nav-buttons {
        display: flex;
        gap: 1.73rem;
        align-items: center;
    }

    .nav-button {
        width: 100px;
        height: 60px;
        background: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 12px;
        font-weight: 500;
        color: #1a3a5c;
        transition: all 0.2s ease;
    }

    .nav-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .profile-circle {
        width: 96px;
        height: 96px;
        background: #fff;
        border-radius: 50%;
        flex-shrink: 0;
    }

    main {
        flex: 1;
        overflow: auto;
        margin: 0;
        padding: 0;
        width: 100%;
        min-height: 0;
    }

    .content {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }
</style>

<div class="app-window">
    <div class="page">
        <div class="top-bar">
            <div class="nav-buttons">
                <button class="nav-button">Button 1</button>
                <button class="nav-button">Button 2</button>
                <a href="champions" class="nav-button" style="text-decoration: none; display: flex; align-items: center; justify-content: center;">Champion</a>
            </div>
            <div class="profile-circle"></div>
        </div>
        <main>
            <article class="content">
                @Body
            </article>
        </main>
    </div>
</div>
